{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["es5", "es6", "dom"],
        "rootDir": "./src",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [".vscode", "node_modules", "dist", "coverage", "**/__tests__"],
    "typeRoots": [
        "./src/@types",
        "./custom_typings",
        "./@types",
        "./node_modules/@types"
    ],
    "ts-node": {
        "files": true
    }
}
