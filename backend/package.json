{
    "name": "Backend Inventory System",
    "version": "1.0.0",
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm run test"
        }
    },
    "scripts": {
        "start": "ts-node -r tsconfig-paths/register src/server.ts",
        "build": "tsc",
        "dev": "nodemon",
        "test:coverage": "jest --coverage --silent --runInBand --detectOpenHandles --forceExit",
        "test:clear": "jest --clearCache",
        "lint": "eslint src/app/",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "typeorm:migration": "npm run typeorm migration:run",
        "typeorm:revert": "npm run typeorm migration:revert",
        "typeorm:seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bunyan": "^1.8.15",
        "cors": "^2.8.5",
        "dotenv": "^16.0.2",
        "elastic-apm-node": "^3.38.0",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "faker": "^6.6.6",
        "helmet": "^6.0.0",
        "http-status-codes": "^2.2.0",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "mysql": "^2.18.1",
        "swagger-ui-express": "^4.3.0",
        "typeorm": "^0.2.41",
        "typeorm-seeding": "^1.6.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/bunyan": "^1.8.8",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.9",
        "@types/http-status-codes": "^1.2.0",
        "@types/jest": "^29.0.1",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/mysql": "^2.15.21",
        "@types/node": "^18.7.17",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.37.0",
        "@typescript-eslint/parser": "^5.37.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.0.3",
        "jest-environment-jsdom": "^29.0.3",
        "jest-sonar-reporter": "^2.0.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "reflect-metadata": "^0.1.13",
        "supertest": "^6.2.4",
        "ts-jest": "^29.0.1",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8.3"
    }
}
